<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Courier.MVVM.Login.View.PickLoginScreenPage"
             BackgroundColor="{DynamicResource SecondaryColor}"
             Title="Pick login provider">

    <ScrollView>

        <StackLayout BindableLayout.ItemsSource="{Binding SuportedLogins}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Button Text="{Binding Name}" Command="{Binding ClickCommand}"/>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
    </ScrollView>
</ContentPage>
